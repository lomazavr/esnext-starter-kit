{
  "name": "esnext-starter",
  "version": "1.0.0",
  "author": "lomazavr",
  "description": "A light foundation for your next frontend project based on webpack.",
  "scripts": {
    "lint": "yarn lint:styles && yarn lint:scripts && echo Linting complete successfully",
    "lint:styles": "stylelint src/**/*.{css,scss,sass}",
    "lint:scripts": "eslint src",
    "format": "yarn format:files && yarn fix:styles && yarn fix:scripts && echo Formatting complete successfully",
    "format:files": "prettier --write src",
    "fix:styles": "stylelint --fix src/**/*.{css,scss,sass}",
    "fix:scripts": "eslint --fix src",
    "build": "cross-env NODE_ENV=production webpack --config webpack/webpack.config.prod.js",
    "dev": "webpack serve --mode development --config webpack/webpack.config.dev.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lomazavr/esnext-starter.git"
  },
  "keywords": [
    "webpack",
    "babel",
    "eslint",
    "prettier",
    "stylelint",
    "starterkit",
    "frontend",
    "es6",
    "esNext",
    "javascript",
    "webdev"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lomazavr/esnext-starter/issues"
  },
  "dependencies": {
    "core-js": "^3.23.1",
    "dotenv": "^16.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/plugin-proposal-class-properties": "^7.17.12",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.18.2",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "babel-loader": "^8.2.5",
    "browserslist": "^4.21.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^4.0.0",
    "dotenv-webpack": "^7.1.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-webpack-plugin": "^3.1.1",
    "html-loader": "^3.1.2",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.1",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^7.7.1",
    "postcss-scss": "^4.0.4",
    "postcss-sorting": "^7.0.1",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.7.1",
    "sass": "^1.52.3",
    "sass-loader": "^13.0.0",
    "serve": "^13.0.2",
    "style-loader": "^3.3.1",
    "stylelint": "^14.9.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-config-standard-scss": "^4.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-order": "^5.0.0",
    "stylelint-webpack-plugin": "^3.3.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dashboard": "^3.3.7",
    "webpack-dev-server": "^4.9.2",
    "webpack-merge": "^5.8.0",
    "yarn-upgrade-all": "^0.7.1"
  }
}
